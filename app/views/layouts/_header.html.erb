<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to t("layouts.header.sample_app"), "#", id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t("layouts.header.home"), "#" %></li>
            <li><%= link_to t("layouts.header.help"), "#" %></li>
            <% if logged_in? %>
              <li class="dropdown">
                <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
                  <%= t("layouts.header.account") %>
                  <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to t("layouts.header.profile"), current_user %></li>
                  <li><%= link_to t("layouts.header.settings"), '#' %></li>
                  <li class="divider"></li>
                  <li><%= button_to t("layouts.header.logout"), logout_path, method: :delete, class: "btn logout" %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to t("layouts.header.help"), login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
</header>

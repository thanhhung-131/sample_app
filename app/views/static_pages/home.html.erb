<% provide :title, t("static_pages.home.title").capitalize %>
<h1><%= t("static_pages.home.title")%></h1>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("microposts.feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="alert alert-warning" role="alert">
        <strong><%= t("session.login_required", login_link: link_to(t("layouts.header.log_in"), login_path)) %></strong>
      </div>
    </div>
  </div>
<% end %>
